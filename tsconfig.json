{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}